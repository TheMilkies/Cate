Project cate
.compiler = "g++"
.files = recursive("src/**.cpp")
.flags = "-fno-exceptions -fpermissive -funsafe-math-optimizations -ffast-math -fno-signed-zeros -ffinite-math-only -std=c++17 -Wall -Ofast"
.libs = {"externals/linux_amd64_libfl.a", "stdc++fs"}
.build_directory = "cate/build"
.out = "release/cate"
.incs = {"include"}
.smolize = true
.threading = true
.build()