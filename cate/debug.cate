Project cate;
cate.compiler = "g++"
cate.files = recursive("src/*.cpp")
cate.flags = "-fpermissive -g -funsafe-math-optimizations -ffast-math -fno-signed-zeros -ffinite-math-only -std=c++17 -lstdc++fs -Wall -Ofast -pthread"
cate.libs = {"externals/linux_amd64_libfl.a"}
cate.build_directory = "cate/build"
cate.incs = {"include"};
cate.out = "out/cate"
cate.build()