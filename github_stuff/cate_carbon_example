/*Library*/
Library library(static);
library.includes = {"include/libexample/"};
library.files = {"libs/lib_example.c"};
library.flags = "-O2 -g";
library.out = "outs/libexample.a";
library.build();

/*Project*/
Project project;
project.files = recursive("src/*.c");
project.includes = {"include/libexample/"};
project.libraries = {library, "GL"};
project.flags = "-O2";
project.out = "outs/program";
project.threading = true; 
project.smol = true; /*minimal to no performance loss!*/
project.build();